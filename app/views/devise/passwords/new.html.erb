<div class="container">
  <div class="columns is-centered">
    <div class="column is-half">
      <h2 class="subtitle">Forgot your password?</h2>
      <p></p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input', placeholder:'Email Address' %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class:'button is-primary is-outlined' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
